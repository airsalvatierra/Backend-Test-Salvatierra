    "css": ["css", "scss"],
    "html": ["htm", "html", "django-html"]
    // ^^ providing just an array sets the VS Code file type
  },
  "htmlhint.options": {
    "doctype-first": false,
  },
  "htmlhint.enable": false,
  "python.linting.pylintEnabled": true,
  "bracketPairColorizer.consecutivePairColors": [
    ["<", "</"],
    ["<", "/>"],
    [
